@using Mvc.Models
@model List<ProductViewModel>

<h2>Products</h2>

<table border="1" cellpadding="6">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Price</th>
    </tr>

@foreach (var p in Model)
{
    <tr>
        <td>@p.Id</td>
        <td>@p.Name</td>
        <td>@p.Price</td>
    </tr>
}
</table>
